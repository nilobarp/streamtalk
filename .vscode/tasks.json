{
    "version": "0.1.0",
    "tasks": [
        {
            "taskName": "build",
            "command": "${workspaceRoot}/node_modules/typescript/bin/tsc",
            "showOutput": "silent",
            "isBuildCommand": true,
            "isShellCommand": true,
            "problemMatcher": "$tsc"
        },
        {
            "taskName": "test",
            "command": "npm",
            "args": [
                "test"
            ],
            "showOutput": "always",
            "isTestCommand": true,
            "echoCommand": true
        }
    ]
}