{
  "name": "heroel",
  "version": "1.0.0",
  "description": "",
  "main": "bundle/app.js",
  "scripts": {
    "start": "DEBUG=info NODE_ENV=dev node bundle/app.js | bunyan -o short",
    "transpile": "tsc --pretty",
    "transpile:watch": "npm run transpile -- -w",
    "lint": "tslint --exclude='./node_modules/**' './**/*.ts?(x)'",
    "lint:watch": "chokidar './**/*.ts' -c 'npm run lint'",
    "cli": "chokidar 'bundle/cli/*.js' -c 'chmod -RH -vvv +x bundle/cli/*.js && for f in $(ls -d bundle/cli/*.js); do ln -sf $f ${f%.*};done;'",
    "build": "npm run transpile && concurrently -r 'npm run lint:watch' 'npm run transpile:watch' 'npm run cli'",
    "linklocal": "linklocal",
    "start:prod": "pm2 start --watch -i 0 bundle/app.js | bunyan -o short ",
    "cover": "NODE_ENV=test DEBUG=off istanbul cover node_modules/.bin/_mocha bundle/test/spec/**/*.test.js",
    "test": "NODE_ENV=test node bundle/test/runner.js",
    "test:watch": "chokidar 'bundle/test/spec/**/*.js' --initial -c 'npm run test'"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/benchmark": "^1.0.30",
    "@types/bluebird": "^3.5.5",
    "@types/bunyan": "^1.8.0",
    "@types/chai": "^3.5.2",
    "@types/core-decorators": "^0.10.32",
    "@types/faker": "^4.1.0",
    "@types/glob": "^5.0.30",
    "@types/graphql": "^0.9.1",
    "@types/jsonwebtoken": "^7.2.0",
    "@types/mocha": "^2.2.41",
    "@types/passport-http": "^0.3.2",
    "@types/passport-jwt": "^2.0.19",
    "@types/request": "0.0.42",
    "@types/restify": "^4.3.4",
    "@types/sequelize": "^3.4.52",
    "@types/supertest": "^2.0.1",
    "@types/umzug": "^1.8.31",
    "benchmark": "^2.1.4",
    "chai": "^3.5.0",
    "chokidar-cli": "^1.2.0",
    "concurrently": "^3.4.0",
    "express-graphql": "^0.6.6",
    "faker": "^4.1.0",
    "istanbul": "^0.4.5",
    "linklocal": "^2.8.0",
    "microtime": "^2.1.5",
    "mocha": "^3.3.0",
    "node-notifier": "^5.1.2",
    "request": "^2.81.0",
    "sqlite3": "^3.1.8",
    "supertest": "^3.0.0",
    "tslint": "^5.3.2",
    "typescript": "^2.2.2"
  },
  "dependencies": {
    "bluebird": "^3.5.0",
    "bunyan": "^1.8.10",
    "core-decorators": "^0.19.0",
    "glob": "^7.1.2",
    "graphql": "^0.10.1",
    "jsonwebtoken": "^7.4.0",
    "passport": "^0.3.2",
    "passport-http": "^0.3.0",
    "passport-jwt": "^2.2.1",
    "pg": "^6.3.1",
    "pg-hstore": "^2.3.2",
    "pm2": "^2.4.6",
    "reflect-metadata": "^0.1.10",
    "restify": "^4.3.0",
    "sequelize": "^4.1.0",
    "typescript-ioc": "^0.4.2",
    "umzug": "^2.0.1"
  }
}
