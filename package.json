{
  "name": "heroel",
  "version": "1.0.0",
  "description": "",
  "main": "bundle/app.js",
  "scripts": {
    "start": "DEBUG=trace NODE_ENV=dev node bundle/app.js | bunyan -o short",
    "transpile": "tsc --pretty",
    "transpile:watch": "npm run transpile -- -w",
    "lint": "tslint --exclude='./node_modules/**' './**/*.ts?(x)'",
    "lint:watch": "chokidar './**/*.ts' -c 'npm run lint'",
    "cli:+x": "chokidar 'bundle/cli/*.js' -c 'chmod -RH -vvv +x bundle/cli/*.js'",
    "build": "npm run transpile && concurrently -r 'npm run lint:watch' 'npm run transpile:watch' 'npm run cli:+x'",
    "cover": "NODE_ENV=test istanbul cover node_modules/.bin/_mocha bundle/test",
    "pretest": "npm run transpile",
    "test": "NODE_ENV=test DEBUG=off mocha bundle/test",
    "linklocal": "linklocal",
    "start:prod": "pm2 start --watch -i 0 bundle/app.js | bunyan -o short "
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^3.5.2",
    "@types/jsonwebtoken": "^7.2.0",
    "@types/mocha": "^2.2.41",
    "@types/passport-http": "^0.3.2",
    "@types/passport-jwt": "^2.0.19",
    "@types/request": "0.0.42",
    "chai": "^3.5.0",
    "chokidar-cli": "^1.2.0",
    "concurrently": "^3.4.0",
    "istanbul": "^0.4.5",
    "linklocal": "^2.8.0",
    "mocha": "^3.3.0",
    "request": "^2.81.0",
    "tslint": "^5.3.2",
    "typescript": "^2.2.2"
  },
  "dependencies": {
    "jsonwebtoken": "^7.4.0",
    "passport": "^0.3.2",
    "passport-http": "^0.3.0",
    "passport-jwt": "^2.2.1",
    "pm2": "^2.4.6",
    "streamtalk": "file:///Users/nilotpal/code/heroel/streamtalk"
  }
}
